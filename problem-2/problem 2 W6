function ladder(word) {
  const result = [];
  
  for (let i = word.length; i > 0; i--) {
    const row = [];
    
    for (let j = 0; j < i; j++) {
      row.push(word[j]);
    }
    
    result.push(row);
  }
  
  return result;
}

// Driver code
const word = 'vocasia';
const result = ladder(word);
console.log(result);
